@model assignment_4.Models.Blog
@{
    ViewBag.Title = "Edit Blog";
    Layout = null; 
}
<h2>Edit Blog</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ApplicationUserId" />

    <div class="form-group">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <input asp-for="Title" id="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Summary" class="col-sm-2 col-form-label"></label>
        <input asp-for="Summary" id="Summary" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
        <textarea asp-for="Content" id="Content" class="form-control"></textarea>
    </div>
    
    <button type="submit" id="Submit" class="btn btn-primary">Update</button>
</form>
