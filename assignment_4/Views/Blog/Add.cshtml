@model Blog
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Add a new post: </h2>
<form asp-action="Add" method="post">
    <div class="row mb-3">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <input asp-for="Title" id="Title" />
       
    </div>

    <div class="row mb-3">
        <label asp-for="Summary" class="col-sm-2 col-form-label"></label>
        <input asp-for="Summary" id="Summary" />
    </div>
  
    <div class="row mb-3">
        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
        <textarea asp-for="Content" id="Content"></textarea>
    </div>
    <button type="submit" id="Submit">Submit</button>
</form>